@model ErrorViewModel
@inject IViewLocalizer Localizer
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-body text-center">
                <h1 class="text-danger mb-4">Error!</h1>
                <p class="lead mb-4 font-weight-bold">@Localizer["Mist"]:</p>
                <p class="mb-4">@Localizer[@Model.Description]</p>
                <a class="btn btn-secondary ml-2" href="@Url.Action("Home", @Model.Controller)">@Localizer["Home"]</a>
            </div>
        </div>
    </div>
</div>