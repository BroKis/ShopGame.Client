@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ShopGame.Client.Models.IdentityModels.UserForUpdate>
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Header"];
}
@if(Model.Any())
{
    <div class="col-md-8 offset-md-2">
        <h1 class="text-center">@Localizer["Header"]</h1>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>@Localizer["Name"]</th>
                <th>@Localizer["Email"]</th>
                <th>@Localizer["Tel"]</th>
                <th>@Localizer["Act"]</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td class="align-middle">

                        <a class="btn btn-outline-primary" asp-action="Edit"
                           asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>| @Localizer["Upd"] |
                        </a>
                        <a class="btn btn-danger text-white" asp-action="Delete"
                           asp-route-id="@item.Id">
                            <i class="bi bi-trash"></i>@Localizer["Del"]
                        </a>

                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-muted text-center my-5">@Localizer["Footer"]</p>
}